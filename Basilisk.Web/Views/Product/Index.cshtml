@using Basilisk.ViewModel.Product
@model IndexProductViewModel
@{
    ViewData["Title"] = "Product Index";
}
<h2>Total Keseluruhan Data : @Model.TotalKeseluruhan</h2>
<table>
    <form method="get" asp-action="Index">
        <div class="field-row">
            <div class="search">
            <label for="searchName">Search</label>
            <input id="searchProduct" type="text" name="searchProduct" value="@Model.SearchProduct" placeholder="Search Product" />
            <input id="searchProduct" type="text" name="searchCategory" value="@Model.SearchCategory" placeholder="Search Category" />
            <input id="searchProduct" type="text" name="searchSupplier" value="@Model.SearchSupplier" placeholder="Search Supplier" />
            <button type="submit"><i class="fas fa-search"></i></button>
            </div>
        </div>
        <div class="field-row">
            <a class="btn btn-add" asp-action="Add"><i class="fas fa-plus"></i></a>
        </div>
    </form>
    <thead>
        <tr>
            <th>Action</th>
            <th>ID</th>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Supplier Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>OnOrder</th>
            <th>Discontinue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GridProduct)
        {
            <tr>
                <td>
                    <a class="btn btn-update" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-delete"><i class="fas fa-trash"></i></a>
                </td>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.SupplierName</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.OnOrder</td>
                <td>@item.Discontinue</td>
            </tr>

        }

    </tbody>
    <tfoot>
        <tr>
            <td>Total Data : @Model.TotalData</td>
            <td colspan="10">
                    @for (int i = 1; i <= Model.TotalHalaman; i++)
                    {
                        <a class="btn btn-add" asp-action="Index" asp-route-page="@i"
                       asp-route-searchProduct="@Model.SearchProduct"
                       asp-route-searchCategory="@Model.SearchCategory"
                       asp-route-searchSupplier="@Model.SearchSupplier">@i</a>
                    }
            </td>            
        </tr>
    </tfoot>
</table>

